{
  "manifest_version": "2",
  "required_api_version": "^2.0.0",
  "api_version": "2",
  "name": "IMDb",
  "description": "Search IMDb with a simple keyword.",
  "developer_name": "Ruud Linssen",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.01
  },
  "preferences": [
    {
      "id": "keyword",
      "type": "keyword",
      "name": "IMDb keyword",
      "description": "IMDb search keyword",
      "default_value": "imdb"
    }
  ]
}
